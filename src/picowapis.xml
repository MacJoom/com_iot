<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
    <name>COM_PICOWAPIS</name>
    <creationDate>2021-08-07</creationDate>
    <author>Martin KOPP "MacJoom"</author>
    <authorEmail>martin.kopp@infotech.ch</authorEmail>
    <authorUrl>https://infotech.ch</authorUrl>
    <copyright>Copyright(c) 2009 - 2021 Martin KOPP "MacJoom". All rights reserved</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <version>0.1.1</version>
    <description>COM_PICOWAPIS_XML_DESCRIPTION</description>
    <!-- Really important for autoloading -->
	<namespace path="src">ITC\Component\Picowapis</namespace>
    <scriptfile>script.php</scriptfile>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>  <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

	<!-- Joomla! 4.x Webservices files -->

    <api>
        <files folder="api/components/com_picowapis"
               destination="api/components/com_picowapis">
            <folder>src</folder>
        </files>
    </api>

    <!-- Frond-end files -->
    <files folder="site">
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <media folder="media/com_picowapis" destination="com_picowapis">
        <folder>js</folder>
    </media>
    <!-- Back-end files -->
    <administration>
        <!-- Menu entries -->
        <menu view="picowapis">COM_PICOWAPIS</menu>
        <submenu>
            <menu link="option=com_picowapis">COM_PICOWAPIS</menu>
            <menu link="option=com_categories&amp;extension=com_picowapis"
                  view="categories" img="class:picowapis-cat"
                  alt="Picowapis/Categories">JCATEGORY
            </menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>picowapi_update.xml</filename>
            <filename>config.xml</filename>
            <folder>src</folder>
            <folder>forms</folder>
            <folder>layouts</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
        </files>
    </administration>
    <changelogurl>https://update.example.com/?extension=com_picowapi_0.1.1/changelog.xml
    </changelogurl>
    <updateservers>
        <server type="extension" name="Picowapi Updates">
            https://update.example.com/?extension=com_picowapi_0.1.1/picowapi_update.xml
        </server>
    </updateservers>
    <dlid prefix="dlid=" suffix=""/>
</extension>
