<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
    <name>COM_IOT</name>
    <creationDate>2021-08-07</creationDate>
    <author>Martin KOPP "MacJoom"</author>
    <authorEmail>martin.kopp@infotech.ch</authorEmail>
    <authorUrl>https://infotech.ch</authorUrl>
    <copyright>Copyright(c) 2009 - 2021 Martin KOPP "MacJoom". All rights reserved</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <version>0.1.1</version>
    <description>COM_IOT_XML_DESCRIPTION</description>
    <!-- Really important for autoloading -->
	<namespace path="src">ITC\Component\Iot</namespace>
    <scriptfile>script.php</scriptfile>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>  <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

	<!-- Joomla! 4.x Webservices files -->

    <api>
        <files folder="api/components/com_iot"
               destination="api/components/com_iot">
            <folder>src</folder>
        </files>
    </api>

    <!-- Frond-end files -->
    <files folder="site">
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <media folder="media/com_iot" destination="com_iot">
        <folder>js</folder>
    </media>
    <!-- Back-end files -->
    <administration>
        <!-- Menu entries -->
        <menu view="iot">COM_IOT</menu>
        <submenu>
            <menu link="option=com_iot">COM_IOT_DEVICES</menu>
            <menu link="option=com_categories&amp;extension=com_iot"
                  view="categories" img="class:iot-cat"
                  alt="Iot/Categories">JCATEGORY
            </menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>iot_update.xml</filename>
            <filename>config.xml</filename>
            <folder>src</folder>
            <folder>forms</folder>
            <folder>layouts</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
        </files>
    </administration>
    <changelogurl>https://update.example.com/?extension=com_iot_0.1.1/changelog.xml
    </changelogurl>
    <updateservers>
        <server type="extension" name="Iot Updates">
            https://update.example.com/?extension=com_iot_0.1.1/iot_update.xml
        </server>
    </updateservers>
    <dlid prefix="dlid=" suffix=""/>
</extension>
